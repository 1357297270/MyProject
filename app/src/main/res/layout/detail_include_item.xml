<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_image_view"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/my_image_view"
        android:text="片长：1小时45分钟" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/length"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:text="国家：中国" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/length"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/my_image_view"
        android:text="类型：剧情/悬疑/科幻" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/my_image_view"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/my_image_view"
        android:text="史上最重情义的德邦，最文艺的007" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/length"
        android:layout_alignTop="@+id/my_image_view"
        android:text="007:大破天幕危机" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="130dp"
    android:layout_marginLeft="95dp"
    android:id="@+id/linearLayout">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/car"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/sit"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/cone"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/tea"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/shop"/>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_weight="1"
        android:text="关注"
        android:id="@+id/button2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/length"
        android:layout_toEndOf="@+id/title"
        android:text="分享" />
</RelativeLayout>